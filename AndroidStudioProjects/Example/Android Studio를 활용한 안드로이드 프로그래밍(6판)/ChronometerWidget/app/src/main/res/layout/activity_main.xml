<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <Chronometer

        android:layout_width="match_parent" android:layout_height="wrap_content" android:id = "@+id/chronometer1" android:gravity ="center" android:textSize = "30dp"/>
    <Button
        android:id="@+id/buttonStart" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Start" />
    <Button
        android:id="@+id/buttonStop" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Stop" />
    <Button
        android:id="@+id/buttonReset" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Reset" /> </LinearLayout>